{
  "globals": {
    "angular": false,
    "VCMS": true
  },
  "predef": [ // extra globals
    "define",
    "require",
    "exports",
    "module",
    "describe",
    "before",
    "beforeEach",
    "after",
    "afterEach",
    "it"
  ],
  "node": true, // enable globals availability when code running inside Node
  "browser": true, // standard browser globals (window, document, etc)
  "es5": true, // allow ecmascript 5 syntax
  "eqeqeq": true, // require triple equals for comparison
  "indent": 2, // tab === 2 spaces
  "immed": true, // require immediate invocations to be wrapped
  "latedef": true, // require variables/functions to be defined before use
  "newcap": true, // require capitalization of all constructor functions
  "noarg": true, // prohibit use of 'arguments.caller' and 'arguments.callee'
  "sub": false, // don't tolerate '[]' notation when can be expressed w/ dot notation
  "undef": false, // require al non-global variables to be declared
  "boss": true, // tolerate assignments where comparisons would be expected
  "eqnull": false, // tolerate use of `== null`
  "maxlen": 80, // max line length
  "unused": true, // warn unused variables
  "strict": false // require `use strict` pragma in every file
}
